<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textSize="18sp" />


        <com.conways.linechart.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="30dp"
            app:centerLineColor="#80ffffff"
            app:centerLineWidth="5dp"
            app:chartLineColor="#C4A9F5"
            app:chartLineWidth="3dp"
            app:fillColorEnd="#00673AB7"
            app:fillColorStart="#FF673AB7"
            app:gridColor="#80FFFFFF"
            app:hCount="11"
            app:innerCircleColor="#ffffff"
            app:innerCircleRadius="4dp"
            app:leftWith="0dp"
            app:rightWith="0dp"
            app:scaleColor="#ff000000"
            app:scaleLenth="4dp"
            app:scaleNodeColor="#FFFFFF"
            app:scaleNodeRadius="6dp"
            app:showGrid="true"
            app:titleWidth="150dp"
            app:topWith="40dp"
            app:xLineColor="#80FFFFFF"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp" />


        <com.conways.linechart.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="30dp"
            app:centerLineColor="#80ffffff"
            app:centerLineWidth="5dp"
            app:chartLineColor="#C4A9F5"
            app:chartLineWidth="3dp"
            app:gridColor="#80FFFFFF"
            app:hCount="11"
            app:innerCircleColor="#ffffff"
            app:innerCircleRadius="4dp"
            app:leftWith="0dp"
            app:lineNormalColor="#7B63A7"
            app:lineSelectColor="#B18DF2"
            app:rightWith="0dp"
            app:scaleColor="#ff000000"
            app:scaleNodeColor="#FFFFFF"
            app:scaleNodeRadius="6dp"
            app:titleWidth="150dp"
            app:topWith="40dp"
            app:xLineColor="#80FFFFFF"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp" />


        <com.conways.linechart.LineChart
            android:id="@+id/lineChart2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="0dp"
            app:canScroll="false"
            app:centerLineColor="#80ffffff"
            app:centerLineWidth="5dp"
            app:chartLineColor="#C4A9F5"
            app:chartLineWidth="3dp"
            app:fillColorEnd="#00673AB7"
            app:fillColorStart="#FF673AB7"
            app:gridColor="#80FFFFFF"
            app:hCount="11"
            app:innerCircleColor="#ffffff"
            app:innerCircleRadius="0dp"
            app:leftWith="0dp"
            app:rightWith="0dp"
            app:scaleColor="#ff000000"
            app:scaleLenth="4dp"
            app:scaleNodeColor="#FFFFFF"
            app:scaleNodeRadius="6dp"
            app:showGrid="true"
            app:showSelectedIndicator="false"
            app:showXAxis="false"
            app:topWith="0dp"
            app:vCount="2"
            app:xLineColor="#80FFFFFF"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp" />


        <com.conways.linechart.CandleChart
            android:id="@+id/candleChart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="30dp"
            app:centerLineColor="#80ffffff"
            app:centerLineWidth="5dp"
            app:chartLineColor="#C4A9F5"
            app:chartLineWidth="2dp"
            app:gridColor="#80FFFFFF"
            app:hCount="11"
            app:innerCircleColor="#ffffff"
            app:innerCircleRadius="4dp"
            app:leftWith="0dp"
            app:lineNormalColor="#7B63A7"
            app:lineSelectColor="#B18DF2"
            app:rightWith="0dp"
            app:scaleColor="#ff000000"
            app:scaleNodeColor="#FFFFFF"
            app:scaleNodeRadius="6dp"
            app:showGrid="false"
            app:topWith="20dp"
            app:vCount="2"
            app:xLineColor="#80FFFFFF"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp"
            app:yLineColor="#00FFFFFF"
            app:yTextSize="12sp" />

        <com.conways.linechart.SleepLineChart
            android:id="@+id/sleepLineChart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="30dp"
            app:centerLineColor="#80ffffff"
            app:centerLineWidth="5dp"
            app:chartLineColor="#C4A9F5"
            app:chartLineWidth="2dp"
            app:fillColorEnd="#00673AB7"
            app:fillColorStart="#80673AB7"
            app:gridColor="#80FFFFFF"
            app:hCount="48"
            app:innerCircleColor="#ffffff"
            app:innerCircleRadius="4dp"
            app:leftWith="20dp"
            app:lineNormalColor="#7B63A7"
            app:lineSelectColor="#B18DF2"
            app:rightWith="50dp"
            app:scaleColor="#ff000000"
            app:scaleNodeColor="#FFFFFF"
            app:scaleNodeRadius="6dp"
            app:showGrid="false"
            app:topWith="20dp"
            app:vCount="2"
            app:xLineColor="#80FFFFFF"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp"
            app:yLineColor="#00FFFFFF"
            app:yTextSize="12sp" />


        <com.conways.linechart.HeartRateChart
            android:id="@+id/combineChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            app:bgBottomColor="#292929"
            app:bgColor="#292929"
            app:bgLeftColor="#292929"
            app:bgRightColor="#292929"
            app:bgTopColor="#292929"
            app:bottomWith="30dp"
            app:chartLineWidth="2dp"
            app:gridColor="#80FFFFFF"
            app:highColor="#ff7f96"
            app:leftWith="20dp"
            app:lowColor="#fc3559"
            app:mediumColor="#fc3559"
            app:defaultLineColor="#fc3559"
            app:restLineColor="#40FFFFFF"
            app:rightWith="20dp"
            app:topWith="50dp"
            app:xMax="100"
            app:xMin="0"
            app:xTextColor="#FFFFFF"
            app:xTextSize="16sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High" />

            <Button
                android:id="@+id/btn_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Med" />

            <Button
                android:id="@+id/btn_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.conways.linechart.CustomView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="50dp"
            android:visibility="gone" />

        <com.conways.linechart.PercentageBar
            android:id="@+id/percentageBar"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="20dp"
            app:interval="2dp"
            app:lineWidth="2dp"
            app:percentage="30"
            app:percentageColor="#3485ff"
            app:lineColor="#FF0000" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>